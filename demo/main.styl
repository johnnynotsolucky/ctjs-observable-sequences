body
  font-family: 'Open Sans', sans-serif
  background: #374140

  div.container
    position: absolute
    left: 3em
    top: 3em
    bottom: 3em
    right: 3em

    div.rows
      width: 350px
      display: flex
      flex-direction: column
      width: 300px
      position: absolute
      transform: translateX(50%)
      right: 50%
      background: #1E1E20
      top: 0
      bottom: 0

      div.row
        display: flex
        flex-direction: row
        flex: 1

        &.player
          background: #DC3522

        div.lane
          flex: 1

          &.player
            display: flex

            img
              max-width: 100%
              max-height: 100%
              margin: 0 auto

          &.enemy
            display: flex

            img
              max-width: 100%
              max-height: 100%
              margin: 0 auto

    div.score, div.gameover, div.start
      text-align: center
      font-size: 7.5rem
      position: absolute
      color: white
      top: 25%
      left: 50%
      transform: translate(-50%, -50%)

    div.gameover
      top: 50%
      font-size: 2.5rem

    div.start
      top: 50%
      font-size: 1.5rem
      width: 100%
